---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="About" description="About Your Name">
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row gap-12 items-center">
        <div class="md:w-1/3">
          <div
            class="aspect-square rounded-full overflow-hidden border-4 border-dark-cyan"
          >
            <img
              src="/images/profile.jpg"
              alt="Your Name"
              class="w-full h-full object-cover"
              width="400"
              height="400"
            />
          </div>
        </div>

        <div class="md:w-2/3">
          <h1 class="text-4xl font-heading font-bold mb-6">About Me</h1>

          <div class="prose text-off-white/90">
            <p>
              I'm a passionate web designer and developer with over 10 years of
              experience creating beautiful, functional websites and
              applications. My approach combines aesthetic sensibility with
              technical expertise to deliver exceptional digital experiences.
            </p>

            <p class="mt-4">
              When I'm not coding, you can find me hiking, reading sci-fi
              novels, or experimenting with new design tools.
            </p>
          </div>

          <h2 class="text-2xl font-heading font-bold mt-12 mb-6">Skills</h2>

          <div class="space-y-4">
            <div>
              <div class="flex justify-between mb-1">
                <span class="font-medium">UI/UX Design</span>
                <span>95%</span>
              </div>
              <div class="w-full bg-off-white/10 rounded-full h-2">
                <div class="bg-dark-cyan h-2 rounded-full" style="width: 95%">
                </div>
              </div>
            </div>

            <div>
              <div class="flex justify-between mb-1">
                <span class="font-medium">Frontend Development</span>
                <span>90%</span>
              </div>
              <div class="w-full bg-off-white/10 rounded-full h-2">
                <div class="bg-dark-cyan h-2 rounded-full" style="width: 90%">
                </div>
              </div>
            </div>

            <div>
              <div class="flex justify-between mb-1">
                <span class="font-medium">Figma</span>
                <span>85%</span>
              </div>
              <div class="w-full bg-off-white/10 rounded-full h-2">
                <div class="bg-dark-cyan h-2 rounded-full" style="width: 85%">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
