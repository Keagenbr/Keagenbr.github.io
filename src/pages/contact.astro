---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Contact" description="Get in touch">
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-2xl mx-auto">
        <h1 class="text-4xl font-heading font-bold mb-2">Get In Touch</h1>
        <p class="text-xl text-off-white/80 mb-12">
          Have a project in mind or want to collaborate? Reach out!
        </p>

        <form class="space-y-6">
          <div>
            <label for="name" class="block mb-2 font-medium">Name</label>
            <input type="text" id="name" class="input-field w-full" required />
          </div>

          <div>
            <label for="email" class="block mb-2 font-medium">Email</label>
            <input
              type="email"
              id="email"
              class="input-field w-full"
              required
            />
          </div>

          <div>
            <label for="message" class="block mb-2 font-medium">Message</label>
            <textarea id="message" rows="5" class="input-field w-full" required
            ></textarea>
          </div>

          <button type="submit" class="btn-primary"> Send Message </button>
        </form>
      </div>
    </div>
  </section>
</MainLayout>
